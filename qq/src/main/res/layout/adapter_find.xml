<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_find_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/common_ic_user" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="***"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_user_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/common_bg_gray_border_8x4"
                    android:text="全名晒单"
                    android:textColor="#88000000"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_user_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="4"
                android:text="评价信息"
                android:textColor="#000000"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_find_1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_find_2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_find_3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="322人浏览"
                    android:textColor="#888"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F2F3F5">

        </LinearLayout>

    </LinearLayout>

    <!--type_2-->
    <LinearLayout
        android:id="@+id/ly_find_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="编辑推荐"
                android:textColor="#000000"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_find_4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:background="#70FBFBFB"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_big_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日最大单"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_small_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本周新品"
                            android:textColor="#000000"
                            android:textSize="10dp" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_find_5"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:background="#70FBFBFB"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_big_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大牌入驻"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tv_small_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GET天猫最新大牌"
                            android:textColor="#000000"
                            android:textSize="10sp" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_find_6"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:background="#70FBFBFB"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_big_title_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="什么牌子好"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tv_small_title_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优质品牌指南"
                            android:textColor="#000000"
                            android:textSize="10sp" />
                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F2F3F5">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>