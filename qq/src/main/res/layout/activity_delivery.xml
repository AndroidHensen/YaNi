<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <include layout="@layout/include_common_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="查询"
                android:textColor="#0080FF"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/et_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/tv_cancel"
                android:background="@drawable/common_bg_gray_10x10"
                android:drawableLeft="@drawable/common_ic_find"
                android:drawablePadding="8dp"
                android:hint="请输入快递单号"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="14dp" />
            <Spinner
                android:id="@+id/sp_delivery"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="8dp" />
        </RelativeLayout>

        <ListView
            android:layout_weight="1"
            android:id="@+id/lv_delivery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:clickable="false"
            android:divider="@null"
            android:scrollbars="none"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/bt_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/login_center_red_bg"
                android:text="查询"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
